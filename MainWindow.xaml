<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Code_Editor__AA___WinUI3___Unpakaged_.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Code_Editor__AA___WinUI3___Unpakaged_"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Code Editor"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title bar + menu -->
        <Grid x:Name="TitleBarGrid"
              Grid.Row="0"
              Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
              VerticalAlignment="Center">
            <MenuBar VerticalAlignment="Center">
                <MenuBarItem Title="Archivo">
                    <MenuFlyoutItem Text="Nuevo" Click="NewFile_Click"/>
                    <MenuFlyoutItem Text="Abrir" Click="OpenFile_Click"/>
                    <MenuFlyoutItem Text="Guardar" Click="SaveFile_Click"/>
                    <MenuFlyoutItem Text="Guardar como..." Click="SaveAsFile_Click"/>
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem Text="Salir" Click="FlyoutExit_Click"/>
                </MenuBarItem>

                <MenuBarItem Title="Editar">
                    <MenuFlyoutItem Text="Copiar" Click="EditCopy_Click"/>
                    <MenuFlyoutItem Text="Pegar" Click="EditPaste_Click"/>
                </MenuBarItem>

                <MenuBarItem Title="Ayuda">
                    <MenuFlyoutItem Text="Acerca de" Click="FlyoutAbout_Click"/>
                </MenuBarItem>
            </MenuBar>
        </Grid>

        <!-- Quick command bar -->
        <CommandBar Grid.Row="1">
            <AppBarButton Icon="Add" Label="Nuevo" Click="NewFile_Click"/>
            <AppBarButton Icon="OpenPane" Label="Abrir" Click="OpenFile_Click"/>
            <AppBarButton Icon="Save" Label="Guardar" Click="SaveFile_Click"/>
        </CommandBar>

        <!-- Editor area: TabView -->
        <TabView x:Name="EditorTabView"
                 Grid.Row="2"
                 TabCloseRequested="EditorTabView_TabCloseRequested"
                 Margin="8"/>
    </Grid>
</Window>
